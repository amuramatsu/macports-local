# -*- coding: utf-8; mode: tcl; tab-width: 4; indent-tabs-mode: nil; c-basic-offset: 4 -*- vim:fenc=utf-8:ft=tcl:et:sw=4:ts=4:sts=4

PortSystem          1.0

name                texlive-latex-recommended
version             0
revision            0

categories          tex
maintainers         @amuramatsu
license             Copyleft Permissive
description         (DUMMY) TeX Live: LaTeX recommended packages
long_description    (DUMMY) A collection of recommended add-on packages for LaTeX which have widespread use.

depends_lib         port:texlive-basic

set binaries    {lwarpmk pdfatfi thumbpdf}

use_configure no
fetch {}
checksum {}
extract {}
build {}

destroot {
    file mkdir ${destroot}${prefix}/bin
    foreach f ${binaries} {
        ln -s "/Library/TeX/texbin/${f}" "${destroot}${prefix}/bin/${f}"
    }
    file mkdir ${destroot}${prefix}/share/doc/${name}
    touch ${destroot}${prefix}/share/doc/${name}/DUMMY
}
